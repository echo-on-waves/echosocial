% views = @page.views_stats
% stars = @page.stars_stats
% edits = @page.edits_stats
<table class="pretty">
  <tr>
     <td>&nbsp;</td>
     <td><%= I18n.t(:viewed).capitalize %></td>
     <td><%= I18n.t(:starred).capitalize %></td>
     <td><%= I18n.t(:edited).capitalize %></td>
  </tr>
  <tr>
    <td><%= I18n.t(:date_today) %></td>
    <td><%= views[0] %></td>
    <td><%= stars[0] %></td>
    <td><%= edits[0] %></td>
  </tr>
  <tr>
    <td><%= I18n.t(:date_this_week) %></td>
    <td><%= views[1] %></td>
    <td><%= stars[1] %></td>
    <td><%= edits[1] %></td>
  </tr>
  <tr>
    <td><%= I18n.t(:date_this_month) %></td>
    <td><%= views[2] %></td>
    <td><%= stars[2] %></td>
    <td><%= edits[2] %></td>
  </tr>
  <tr>
    <td><%= I18n.t(:date_all_time) %></td>
    <td><%= views[3] %></td>
    <td><%= stars[3] %></td>
    <td>&nbsp;</td>
  </tr>
</table>
