<% @title_box = capture do -%>
  <h1><%=h "Send request to join %s"[:send_join_request_title] % @group.display_name %></h1>
<% end -%>
		
<blockquote>
  <p><%= "You will not become a member of this group until your request has been approved. You can track the status of your requests by visiting: {link_to_requests}."[:join_request_info, link_to('my requests'.t, :controller => '/me/requests', :action => 'from_me')] %></p>
  <%- form_tag(:controller => 'groups/requests', :action => 'create_join', :id => @group) do -%>
    <!-- <p>Optional message included with the join request:<br/>
      <%# text_area_tag 'message', params[:message], :rows => 2, :cols => 50 %>
    </p> -->
    <%= submit_tag 'Send Request'[:send_request_button], :name => 'send' %>
    <%= submit_tag 'Cancel'.t, :name => 'cancel' %>
  <% end -%>
</blockquote>

