<%- if @notice_message.any? -%>
<%= I18n.t(:email_notice_hello_with_message, :from => @from.display_name, :message => @notice_message) %>
<%- else -%>
<%= I18n.t(:email_notice_hello, :from => @from.display_name) %>
<%- end -%>

<%= I18n.t(:email_notice_access) %>

<%- if @code -%>
  <%= @link + '/code/' + @code.code %>

<%= I18n.t(:email_link_expires, :days => @code.days_left) %>
<%- else -%>
  <%= @link %>
<%- end -%>

