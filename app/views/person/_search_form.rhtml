<% form_tag({:action => "directory"},:id => "searchform") do -%>
<%= I18n.t(:search) %>: <%= text_field_tag 'filter', @filter %>
<% end -%>
<%= javascript_tag "Form.focusFirstElement('searchform');" %>

<%# observe_form "searchform",
   :frequency => 0.5,
