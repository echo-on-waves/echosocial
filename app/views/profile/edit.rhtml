<% @title_box = capture do -%>
<h1><%= I18n.t(:my_settings, :user => current_user.display_name) %></h1>
<% end -%>
<% render :partial => @tabs %>

<!-- begin profile form -->
<% form_tag(:action => 'edit') do -%>

<p><%= profile_description %></p>

<div class='profile'>
<%= render :partial => 'permissions_form' %>
<%= render :partial => 'form' %>
</div>

<p style='text-align:right'>
<%= submit_tag I18n.t(:save_changes), :name => 'save' %>
</p>

<% end -%>
<!-- end profile form -->

