<%= Formy.form do |f|
      f.row do |r|
        r.label "Direction"
        r.label_for "widget_direction"
        r.input select :widget, :direction, [:vertical, :horizontal]
      end
      f.row do |r|
        r.label "CSS Class"
        r.label_for "widget_css_class"
        r.input text_field :widget, :css_class
      end
      f.row do |r|
        r.label "Children"
        r.input render :partial => 'widget_children'
      end
    end -%>
