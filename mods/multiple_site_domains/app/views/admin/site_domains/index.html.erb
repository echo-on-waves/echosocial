<% @title_box = '<h1>Domains</h1>' -%>

<i>Here you can configure additional domain names for your site.</i>
<br /><br />
<table>
  <tr>
    <th>Domain</th>
    <th></th>
  </tr>
<% @site_domains.each do |site_domain| -%>
<tr>
  <td><%= site_domain.domain %></td>
  <td><%= link_to "Remove", admin_site_domain_url(site_domain), :method => :delete, :confirm => "Are you sure you want to remove '#{site_domain.domain}' from this site?" %></td>
</tr>
<% end -%>
</table>

<%= link_to "Add Domain", new_admin_site_domain_url %>
